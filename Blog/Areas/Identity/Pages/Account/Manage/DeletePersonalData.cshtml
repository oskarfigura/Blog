@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Delete Personal Data";
    ViewData["ActivePage"] = ManageNavPages.DeletePersonalData;
}


<div class="row">
    <div class="col-md-offset-3 col-md-6">
        <h4>@ViewData["Title"]</h4>

        <h5 class="text-danger">
            Deleting this data will permanently 
                remove your account, and this cannot be recovered.
        </h5>

        <form id="delete-user" method="post" class="form-group" asp-antiforgery="true">
            @if (Model.RequirePassword)
            {
                <div class="form-field">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="full-width" placeholder="Password"/>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
            }
            <button class="btn-cust btn-cust--stroke full-width" type="submit">
                Delete account
            </button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}