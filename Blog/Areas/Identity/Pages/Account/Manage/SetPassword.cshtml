@page
@model SetPasswordModel
@{
    ViewData["Title"] = "Set password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<div class="row">
    <div class="col-md-offset-3 col-md-6">
        <h4>Set your password</h4>
        @Html.Partial("_StatusMessage", Model.StatusMessage)
        <p class="lead">
            You do not have a local username/password for this site. Add a local
            account so you can log in without an external login.
        </p>
        <form id="set-password-form" method="post" asp-antiforgery="true">
            <div class="form-field">
                <label asp-for="Input.NewPassword"></label>
                <input asp-for="Input.NewPassword" class="full-width" placeholder="New Password"/>
                <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
            </div>
            <div class="form-field">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="full-width" placeholder="Confirm Password"/>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn-cust btn-cust--stroke full-width">
                Set password
            </button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}