@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change password";
}
<div class="row">
    <div class="col-md-offset-3 col-md-6">
        <h4>@ViewData["Title"]</h4>
        @Html.Partial("_StatusMessage", Model.StatusMessage)

        <form id="change-password-form" method="post" asp-antiforgery="true">
            <div class="form-field">
                <label asp-for="Input.OldPassword"></label>
                <input asp-for="Input.OldPassword" class="full-width" placeholder="Old Password"/>
                <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
            </div>
            <div class="form-field">
                <label asp-for="Input.NewPassword"></label>
                <input asp-for="Input.NewPassword" class="full-width" placeholder="New Password"/>
                <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
            </div>
            <div class="form-field">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="full-width" placeholder="Confirm Password"/>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn-cust btn-cust--stroke full-width">
                Update password
            </button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}