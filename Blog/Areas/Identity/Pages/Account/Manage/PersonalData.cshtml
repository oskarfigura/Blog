@page
@model PersonalDataModel
@{
    ViewData["Title"] = "Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}
<div class="row">
    <div class="col-md-offset-3 col-md-6">

        <h4>@ViewData["Title"]</h4>

        <p>Your account contains personal data that you have given us. This page allows you to download or delete that data.</p>
        <h5 class="text-danger">
            Deleting this data will permanently remove your account, and this cannot be recovered.
        </h5>

        <form asp-page="DownloadPersonalData" method="post" class="form-group" asp-antiforgery="true">
            <button class="btn-cust btn-cust--stroke full-width" type="submit">Download</button>
        </form>
        <p>
            <a asp-page="DeletePersonalData" class="btn-cust btn-cust--stroke full-width">Delete</a>
        </p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}