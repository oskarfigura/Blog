@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<section class="s-content">
    <div class="row s-content__header">
        <h1>@ViewData["Title"]</h1>
        <hr/>
    </div>
    <div class="row s-content__header">
        <div class="col-md-offset-4 col-md-4">
            <form asp-route-returnUrl="@Model.ReturnUrl" method="post" asp-antiforgery="true">
                <h4>Create a new account.</h4>
                <hr/>
                <div class="form-field">
                    <label asp-for="Input.Name"></label>
                    <input asp-for="Input.Name" class="full-width" placeholder="Full Name"/>
                    <span asp-validation-for="Input.Name" class="text-danger"></span>
                </div>
                <div class="form-field">
                    <label asp-for="Input.DisplayName"></label>
                    <input asp-for="Input.DisplayName" class="full-width" placeholder="Display Name"/>
                    <span asp-validation-for="Input.DisplayName" class="text-danger"></span>
                </div>
                <div class="form-field">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="full-width" placeholder="Email"/>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-field">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="full-width" placeholder="Password"/>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-field">
                    <label asp-for="Input.ConfirmPassword"></label>
                    <input asp-for="Input.ConfirmPassword" class="full-width" placeholder="Confirm Password"/>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <button type="submit" class="btn-cust btn-cust--stroke full-width">Register</button>
            </form>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}