@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}


<section class="s-content">
    <div class="row s-content__header">
        <h1>@ViewData["Title"]</h1>
        <hr/>
    </div>
    <div class="row s-content__header">
        <div class="col-md-offset-4 col-md-4">
            <section>
                <form method="post">
                    <div class="form-field">
                        <label asp-for="Input.Email"></label>
                        <input asp-for="Input.Email" class="full-width" placeholder="Email"/>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-field">
                        <label asp-for="Input.Password"></label>
                        <input asp-for="Input.Password" class="full-width" placeholder="Password"/>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-field">
                        <div class="checkbox">
                            <label asp-for="Input.RememberMe">
                                <input asp-for="Input.RememberMe"/>
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn-cust btn-cust--stroke full-width">Log in</button>
                    </div>
                    <div class="form-group">
                        <p>
                            <a asp-page="./ForgotPassword">Forgot your password?</a>
                        </p>
                        <p>
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                        </p>
                    </div>
                </form>
            </section>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}