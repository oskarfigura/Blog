@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Reset password";
}

<section class="s-content">
    <div class="row s-content__header">
        <h1>@ViewData["Title"]</h1>
        <h4>
            Reset your password.
        </h4>
        <hr/>
    </div>
    <div class="row s-content__header">
        <div class="col-md-offset-4 col-md-4">
            <form method="post" asp-antiforgery="true">
                <input asp-for="Input.Code" type="hidden"/>
                <div class="form-field">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="full-width"/>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-field">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="full-width"/>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-field">
                    <label asp-for="Input.ConfirmPassword"></label>
                    <input asp-for="Input.ConfirmPassword" class="full-width"/>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <button type="submit" class="btn-cust btn-cust--stroke full-width">Reset</button>
            </form>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}