@model AccountEditViewModel
@{
    ViewData["Title"] = "Edit Account";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="s-content">
    <div class="row s-content__header">
        <h1>@ViewData["Title"]</h1>
        <h3 class="text-danger">@Html.ValidationMessage("errorMsg")</h3>
        <hr/>
    </div>

    <div class="row">
        <form asp-action="Edit" asp-antiforgery="true" method="post">
            <div class="form-horizontal">
                <h3>Edit account: @Model.UserAccount.UserName</h3>
                <hr />
                @Html.HiddenFor(model => model.UserAccount.Id)
                @Html.HiddenFor(model => model.UserAccount.UserName)

                <div class="form-field">
                    <label asp-for="UserAccount.Name"></label>
                    <input asp-for="UserAccount.Name" 
                           class="full-width" type="text" placeholder="Full Name"/>
                    <span asp-validation-for="UserAccount.Name" class="text-danger"></span>
                </div>

                <div class="form-field">
                    <label asp-for="UserAccount.DisplayName"></label>
                    <input asp-for="UserAccount.DisplayName" 
                           class="full-width" type="text" placeholder="Display Name"/>
                    <span asp-validation-for="UserAccount.DisplayName" class="text-danger"></span>
                </div>

                <div class="form-field">
                    <label asp-for="UserAccount.Email"></label>
                    <input asp-for="UserAccount.Email" 
                           class="full-width" type="text" placeholder="Email"/>
                    <span asp-validation-for="UserAccount.Email" class="text-danger"></span>
                </div>

                <div class="form-field">
                    <label asp-for="UserAccount.PhoneNumber"></label>
                    <input asp-for="UserAccount.PhoneNumber" 
                           class="full-width" type="text" placeholder="Phone Number"/>
                    <span asp-validation-for="UserAccount.PhoneNumber" class="text-danger"></span>
                </div>

                <div class="form-field">
                    <label asp-for="UserAccount.Role"></label>
                    @Html.DropDownListFor(x => Model.UserAccount.Role,
                        new SelectList(Model.AvailableIdentityRoles), new {@class = "full-width"})
                </div>

                <div class="form-field">
                    @Html.ActionLink("Back to List", "Index", new {},
                        new {@class = "btn-cust btn-cust--danger" })
                    <input type="submit" value="Save" class="btn-cust btn-cust--success" />
                </div>
            </div>
        </form>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}