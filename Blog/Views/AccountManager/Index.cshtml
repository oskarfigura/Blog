@model AccountManagerViewModel
@{
    ViewData["Title"] = "Account Manager";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewData["Title"]</h2>

<div class="container">
    <div class="row form-group">
        @using (Html.BeginForm("Index", "AccountManager", FormMethod.Get, new { id = "searchForm" }))
        {
            <div class="col-md-6 form-group">
                <label for="inputSearchUserName">Find by user name:</label>
                <div class="input-group">
                    @Html.TextBoxFor(m => m.AccountSearch.UserName, new {
                        @class = "form-control", @id = "inputSearchUserName", @placeholder = "Search by user name" })
                    <span class="input-group-btn">
                        <input type="submit" value="Search" class="btn btn-default" />
                    </span>
                </div>
            </div>
        }
        @using (Html.BeginForm("Index", "AccountManager", FormMethod.Get, new { id = "filterRoleForm" }))
        {
            <div class="col-md-6 form-group">
                <label for="filterByRole">Filter by role:</label>
                <div class="input-group">
                    @Html.DropDownListFor(m => m.AccountSearch.Role, Model.AvailableIdentityRoles.Select(item => new SelectListItem
                    {Value = item.Name.ToString(),Text = item.Name.ToString(),}), "All Roles", new { @class = "form-control", @id = "filterByRole" })
                    <span class="input-group-btn">
                        <input type="submit" value="Filter" class="btn btn-default" />
                    </span>
                </div>
            </div>
        }
    </div>
    <div class="table-responsive">
        <table class="table">
            <tr>
                <th>
                    User Name
                </th>
                <th>
                    Email
                </th>
                <th>
                    Name
                </th>
                <th>
                    Display Name
                </th>
                <th>
                    Role
                </th>
                <th></th>
            </tr>

            @foreach (var user in Model.Accounts)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => user.UserName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => user.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => user.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => user.DisplayName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => user.Role)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new {id = user.Id}) |
                        @Html.ActionLink("Details", "Details", new {id = user.Id}) |
                        @Html.ActionLink("Delete", "Delete", new {id = user.Id})
                    </td>
                </tr>
            }
        </table>
    </div>
    @if (ViewData["ManagerMessage"] != null)
    {
        <!-- Modal -->
        <div class="modal fade" id="messageModal" tabindex="-1" role="dialog" aria-labelledby="messageModal" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h2 class="modal-title">Message:</h2>
                    </div>
                    <div class="modal-body">
                        <h3>@ViewData["ManagerMessage"]</h3>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts
{
    <script>
        $(document).ready(function() {
            $(function() {
                $('#messageModal').modal('show');
            });
            $("#searchForm").submit(function(e) {
                if ($("#inputSearchUserName").val() == '') {
                    e.preventDefault();
                }
            });
        });
    </script>
}